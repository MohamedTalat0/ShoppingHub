@using ShoppingHub.BLL.ModelVm
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    var isRtl = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
@model LoginUserVM

<style>
    .login-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        padding: 3rem;
        max-width: 500px;
        margin: 2rem auto;
        position: relative;
        overflow: hidden;
        direction: @(isRtl ? "rtl" : "ltr");
    }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .form-header h2 {
            color: #333;
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-header p {
            color: #666;
            font-size: 1rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #333;
        font-weight: 500;
        font-size: 0.95rem;
        text-align: @(isRtl ? "right" : "left");
    }

    .form-control-custom {
        width: 100%;
        padding: 0.875rem 1rem;
        padding-@(isRtl ? "right" : "left"): 3rem;
        padding-@(isRtl ? "left" : "right"): 1rem;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
        direction: @(isRtl ? "rtl" : "ltr");
        text-align: @(isRtl ? "right" : "left");
    }

        .form-control-custom:focus {
            outline: none;
            border-color: #667eea;
            background-color: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .form-icon {
        position: absolute;
        @(isRtl ? "right" : "left"): 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        font-size: 1.1rem;
        z-index: 10;
    }

    .file-input-wrapper {
        position: relative;
        display: inline-block;
        width: 100%;
    }

    .file-input {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

    .file-input-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.875rem 1rem;
        border: 2px dashed #667eea;
        border-radius: 10px;
        background-color: #f8f9fa;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #667eea;
        font-weight: 500;
        direction: @(isRtl ? "rtl" : "ltr");
    }

        .file-input-label:hover {
            background-color: rgba(102, 126, 234, 0.05);
            border-color: #5a67d8;
        }

        .file-input-label i {
            margin-@(isRtl ? "left" : "right"): 0.5rem;
            margin-@(isRtl ? "right" : "left"): 0;
            font-size: 1.1rem;
        }

    .btn-login {
        width: 100%;
        padding: 0.875rem 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-login:active {
            transform: translateY(0);
        }

    .form-footer {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

        .form-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
        }

            .form-footer a:hover {
                text-decoration: underline;
            }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        text-align: @(isRtl ? "right" : "left");
    }

    .image-preview {
        margin-top: 0.5rem;
        text-align: center;
    }

        .image-preview img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 50%;
            border: 3px solid #667eea;
            object-fit: cover;
        }

    .password-toggle {
        position: absolute;
        @(isRtl ? "left" : "right"): 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #667eea;
        cursor: pointer;
    }

    /* Alert styling for RTL */
    .alert {
        direction: @(isRtl ? "rtl" : "ltr");
        text-align: @(isRtl ? "right" : "left");
    }

    /* Responsive */
    media (max-width: 576px) {
        .registration-container {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .form-header h2 {
            font-size: 1.75rem;
        }
    }

    /* RTL specific adjustments */
    @if (isRtl)
    {
        <text>
        .form-control-custom::placeholder {
            text-align: right;
        }
        
        .btn-register i {
            margin-left: 0.5rem;
            margin-right: 0;
        }
        </text>
    }
    else
    {
        <text>
        .btn-register i {
            margin-right: 0.5rem;
            margin-left: 0;
        }
        </text>
    }
</style>



<div class="login-container">
    <div class="form-header">
        <h2><i class="fas fa-user-plus"></i> @SharedLocalizer["Signup"]</h2>
        <p>@SharedLocalizer["Signup"]</p>
    </div>

    <form asp-action="Login" asp-controller="Account" method="post"  id="LoginForm">

        <div class="form-group">
            <label asp-for ="UserName" class="form-label">@SharedLocalizer["UserName"]</label>
            <div style="position: relative;">
                <i class="fas fa-user form-icon"></i>
                <input asp-for="UserName" class="form-control-custom" placeholder="@SharedLocalizer["UserName_placeHolder"]" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Password" class="form-label">@SharedLocalizer["Password"]</label>
            <div style="position: relative;">
                <i class="fas fa-lock form-icon"></i>
                <input asp-for="Password" type="password" class="form-control-custom" placeholder="@SharedLocalizer["password_placeHolder"]" id="Password" />
                <button type="button" class="password-toggle" onclick="togglePassword()">
                    <i class="fas fa-eye" id="passwordIcon"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        

        <button type="submit" class="btn-login">
            <i class="fas fa-user-plus"></i> @SharedLocalizer["SignUpBtn"]
        </button>
    </form>

    <div class="form-footer">
        <p>@SharedLocalizer["Register"] <a asp-action="Register" asp-controller="Account">@SharedLocalizer["signUpHere"]</a></p>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    

