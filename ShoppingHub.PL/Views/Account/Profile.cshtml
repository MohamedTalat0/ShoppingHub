@using ShoppingHub.BLL.ModelVm.UserVM
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@model UserProfileVM

@if (Model == null)
{
    <div class="alert alert-warning">
        @SharedLocalizer["Profile information not available. Please try again later."]
    </div>
}
else
{
    <div class="profile-container">
        <!-- Profile Header -->
        <div class="form-header text-center">
            <div class="profile-avatar">
                <img src="@(string.IsNullOrEmpty(Model.userImage)
                                                                      ? "/images/default-avatar.png"
                                                                      : Model.userImage)"
                 alt="Profile Picture" id="profileImage" class="rounded-circle shadow">
        </div>
        <h2 class="mt-3"><i class="fas fa-user"></i> @(Model.userName ?? SharedLocalizer["Unknown User"])</h2>
    </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <a asp-controller="Order" asp-action="MyOrders" class="stat-card clickable-stat">
                <h3>@Model.totalOrders</h3>
                <p>@SharedLocalizer["Total Orders"]</p>
            </a>
        </div>

        <!-- Information -->
        <div class="profile-info">
            <div class="info-card">
                <i class="fas fa-envelope"></i>
                <h4>@SharedLocalizer["Email"]</h4>
                <p>@(Model.email ?? SharedLocalizer["Not provided"])</p>
            </div>

            <div class="info-card">
                <i class="fas fa-phone"></i>
                <h4>@SharedLocalizer["Phone Number"]</h4>
                <p>@(Model.phoneNumber ?? SharedLocalizer["Not provided"])</p>
            </div>

            <div class="info-card">
                <i class="fas fa-map-marker-alt"></i>
                <h4>@SharedLocalizer["Address"]</h4>
                <p>@(Model.Address ?? SharedLocalizer["Not provided"])</p>
            </div>
        </div>

        <!-- Edit Profile Button -->
        <div class="text-center mt-4">
            <a asp-action="EditProfile" asp-controller="Account" class="btn-primary-custom">
                <i class="fas fa-edit"></i> @SharedLocalizer["Edit Profile"]
            </a>
        </div>
    </div>
}

<style>
    .profile-container {
        max-width: 800px;
        margin: auto;
        padding: 2rem;
    }

    .profile-avatar img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border: 3px solid #667eea;
    }

    .stats-grid {
        display: flex;
        justify-content: center;
        margin: 2rem 0;
    }

    .stat-card {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        margin: 0 10px;
        transition: transform 0.2s;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .clickable-stat:hover {
        transform: translateY(-5px);
        background: #e9ecef;
        cursor: pointer;
    }

    .profile-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
    }

    .info-card {
        background: #fff;
        padding: 1.2rem;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        text-align: center;
    }

        .info-card i {
            font-size: 1.8rem;
            margin-bottom: .5rem;
            color: #667eea;
        }

    .btn-primary-custom {
        background: #667eea;
        color: #fff;
        padding: 0.6rem 1.4rem;
        border-radius: 8px;
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-primary-custom:hover {
            background: #5a67d8;
        }
</style>