@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    var isRtl = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar";
}

@model ShoppingHub.BLL.ModelVM.EditUserVM

<style>
    .registration-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        padding: 3rem;
        max-width: 500px;
        margin: 2rem auto;
        position: relative;
        overflow: hidden;
        direction: @(isRtl ? "rtl" : "ltr");
    }

        .registration-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .form-header h2 {
            color: #333;
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-header p {
            color: #666;
            font-size: 1rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #333;
        font-weight: 500;
        font-size: 0.95rem;
        text-align: @(isRtl ? "right" : "left");
    }

    .form-control-custom {
        width: 100%;
        padding: 0.875rem 1rem;
        padding-@(isRtl ? "right" : "left"): 3rem;
        padding-@(isRtl ? "left" : "right"): 1rem;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
        direction: @(isRtl ? "rtl" : "ltr");
        text-align: @(isRtl ? "right" : "left");
    }

        .form-control-custom:focus {
            outline: none;
            border-color: #667eea;
            background-color: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .form-icon {
        position: absolute;
        @(isRtl ? "right" : "left"): 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        font-size: 1.1rem;
        z-index: 10;
    }

    .file-input-wrapper {
        position: relative;
        display: inline-block;
        width: 100%;
    }

    .file-input {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

    .file-input-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.875rem 1rem;
        border: 2px dashed #667eea;
        border-radius: 10px;
        background-color: #f8f9fa;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #667eea;
        font-weight: 500;
        direction: @(isRtl ? "rtl" : "ltr");
    }

        .file-input-label:hover {
            background-color: rgba(102, 126, 234, 0.05);
            border-color: #5a67d8;
        }

        .file-input-label i {
            margin-@(isRtl ? "left" : "right"): 0.5rem;
            font-size: 1.1rem;
        }

    .btn-register {
        width: 100%;
        padding: 0.875rem 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-register:active {
            transform: translateY(0);
        }

    .form-footer {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

        .form-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
        }

            .form-footer a:hover {
                text-decoration: underline;
            }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        text-align: @(isRtl ? "right" : "left");
    }

    .image-preview {
        margin-top: 0.5rem;
        text-align: center;
    }

        .image-preview img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 50%;
            border: 3px solid #667eea;
            object-fit: cover;
        }

    /* Responsive */
    media (max-width: 576px) {
        .registration-container {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .form-header h2 {
            font-size: 1.75rem;
        }
    }

    /* RTL specific adjustments */
    @if (isRtl)
    {
        <text>
        .form-control-custom::placeholder {
            text-align: right;
        }

        .btn-register i {
            margin-left: 0.5rem;
        }
        </text>
    }
    else
    {
        <text>
        .btn-register i {
            margin-right: 0.5rem;
        }
        </text>
    }
</style>


<div class="registration-container">
    <div class="form-header">
        <h2><i class="fas fa-user-edit"></i> @SharedLocalizer["EditProfile"]</h2>
        <p>@SharedLocalizer["UpdateYourInfo"]</p>
    </div>

    <form asp-action="EditProfile" asp-controller="Account" method="post" enctype="multipart/form-data" id="editProfileForm">

        <!-- Name -->
        <div class="form-group">
            <label asp-for="Name" class="form-label">@SharedLocalizer["Name"]</label>
            <div style="position: relative;">
                <i class="fas fa-user form-icon"></i>
                <input asp-for="Name" class="form-control-custom" placeholder="@SharedLocalizer["Name_placeHolder"]" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group">
            <label asp-for="Email" class="form-label">@SharedLocalizer["Email"]</label>
            <div style="position: relative;">
                <i class="fas fa-envelope form-icon"></i>
                <input asp-for="Email" type="email" class="form-control-custom" placeholder="@SharedLocalizer["Email_placeHolder"]" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">@SharedLocalizer["PhoneNumber"]</label>
            <div style="position: relative;">
                <i class="fas fa-phone form-icon"></i>
                <input asp-for="PhoneNumber" type="tel" class="form-control-custom" placeholder="@SharedLocalizer["phone_placeHolder"]" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="form-group">
            <label asp-for="Address" class="form-label">@SharedLocalizer["Address"]</label>
            <div style="position: relative;">
                <i class="fas fa-map-marker-alt form-icon"></i>
                <input asp-for="Address" class="form-control-custom" placeholder="@SharedLocalizer["Address_placeHolder"]" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Profile Image -->
        <div class="form-group">
            <label class="form-label">@SharedLocalizer["ProfileImage"]</label>
            <div class="image-preview">
                <img src="@(string.IsNullOrEmpty(Model.oldProfileImage)
                            ? "/images/default-avatar.png"
                            : "/Files/images/usersImages/" + Model.oldProfileImage)" alt="Profile Picture">
            </div>
            <div class="file-input-wrapper mt-2">
                <input asp-for="newProfileImage" type="file" accept="image/*" class="file-input" onchange="previewImage(event)" id="newProfileImage" />
                <label for="newProfileImage" class="file-input-label">
                    <i class="fas fa-cloud-upload-alt"></i>
                    @SharedLocalizer["ChangeProfilePicture"]
                </label>
            </div>
            <div class="image-preview" id="imagePreview"></div>
            <span asp-validation-for="newProfileImage" class="text-danger"></span>
        </div>

        <!-- Save Changes -->
        <button type="submit" class="btn-register">
            <i class="fas fa-save"></i> @SharedLocalizer["SaveChanges"]
        </button>
    </form>

    <div class="form-footer">
        <p><a asp-action="Profile" asp-controller="Account">@SharedLocalizer["BackToProfile"]</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('imagePreview');
            const label = document.querySelector('.file-input-label');

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.innerHTML = '<img src="' + e.target.result + '" alt="Profile Preview">';
                    label.innerHTML = '<i class="fas fa-check"></i> @SharedLocalizer["ImageSelected"]';
                    label.style.borderColor = '#28a745';
                    label.style.color = '#28a745';
                };
                reader.readAsDataURL(file);
            } else {
                preview.innerHTML = '';
                label.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> @SharedLocalizer["ChangeProfilePicture"]';
                label.style.borderColor = '#667eea';
                label.style.color = '#667eea';
            }
        }
    </script>
}
