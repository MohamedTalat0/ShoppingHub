@using ShoppingHub.BLL.ModelVm.Cart
@model ViewCartVM
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
   var isRtl = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar"; 
}
<style>
    body {
        font-family: 'Inter', 'Roboto', sans-serif;
    }

    .cart-container, .summary-container {
        border-radius: 15px;
        background: #fff;
        padding: 2.5rem;
        box-shadow: 0px 5px 25px rgba(118, 75, 162, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .cart-container:hover, .summary-container:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0px 12px 35px rgba(118, 75, 162, 0.15);
        }

    .cart-item {
        background: #f8f8f8;
        border-radius: 12px;
        box-shadow: 0px 2px 8px rgba(118, 75, 162, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-height: 100px;
        display: flex;
        align-items: center;
        margin-bottom: 0.7rem;
        padding: 0.5rem;
    }

        .cart-item:hover {
            transform: scale(1.02);
            box-shadow: 0px 6px 15px rgba(118, 75, 162, 0.08);
        }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0px 3px 6px rgba(0,0,0,0.1);
        margin-left: 5px;
    }

    .qty-btn {
        background: none;
        border: none;
        color: black;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
    }

        .qty-btn:hover {
            transform: scale(1.25);
        }

        .qty-btn:disabled {
            opacity: 0.5; 
            cursor: not-allowed; 
            pointer-events: none; 
            transform: none; 
        }

            .qty-btn:disabled:hover {
                transform: none;
            }

    .remove-btn {
        background: none;
        border: none;
        font-size: 24px;
        color: #aaa;
        cursor: pointer;
        transition: transform 0.2s ease-in-out, color 0.2s ease-in-out;
    }

        .remove-btn:hover {
            color: red;
            transform: scale(1.2);
        }

    .clear-cart-link {
        background: linear-gradient(45deg, #764ba2, #667eea);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        border: none;
        background-color: transparent;
        outline: none; 
        padding: 0;
        display: inline;
        transition: transform 0.2s ease-in-out, opacity 0.2s ease-in-out;
    }

        .clear-cart-link:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }


    .btn-checkout {
        background: linear-gradient(45deg, #764ba2, #667eea);
        border: none;
        color: white;
        padding: 12px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: bold;
        transition: transform 0.2s ease-in-out;
    }

        .btn-checkout:hover {
            transform: scale(1.05);
        }

    .cart-header {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

        .cart-header > div,
        .cart-item > div {
            padding-left: 5px;
            padding-right: 5px;
        }

    .header-image {
        transform: translateX(8px); 
    }

    .header-price {
        transform: translateX(-6px); 
    }

    .cart-header + hr {
        display: none;
    }

    .price-col {
        transform: translateX(-5px);
    }
</style>

<div class="container my-5">
    <div class="row justify-content-between">
        <div class="col-lg-8">
            <div class="cart-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="fw-bold mb-0">@SharedLocalizer["Shopping Cart"]</h3>
                    @if (Model != null)
                    {
                        <span class="text-muted">@Model.TotalItems @SharedLocalizer["Items"]</span>
                    }
                    else
                    {
                        <span class="text-muted">0 @SharedLocalizer["Items"]</span>
                    }
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <p>@SharedLocalizer[ViewBag.ErrorMessage]</p>
                }
                else
                {
                    <div class="cart-header">
                    <div class="col-2 header-image">@SharedLocalizer["Image"]</div>
                    <div class="col-4">@SharedLocalizer["Product"]</div>
                    <div class="col-3 text-center">@SharedLocalizer["Quantity"]</div>
                    <div class="col-2 text-end header-price">@SharedLocalizer["Price"]</div>
                    @* <div class="col-1 text-center"></div>  *@
                    </div>
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="cart-item">
                                <div class="col-2">
                                    @* <img src="~~/Files/@item.ImagePath" class="product-img"> *@
                                    <img src="~/Files/product.jpg" class="product-img">

                                </div>
                                <div class="col-4">
                                @if (isRtl)
                                {
                                    <h6 class="fw-bold mb-1">@item.NameAR</h6>

                                }
                                else
                                {
                                    <h6 class="fw-bold mb-1">@item.Name</h6>
                                }
                                    <p class="text-muted mb-0">$@item.PricePerItem</p>
                                </div>
                                <div class="col-3 text-center">
                                    <form id="Minus" asp-action="UpdateQuantity" asp-controller="Cart" asp-route-productID="@item.ProductID" asp-route-quantity="-1" class="d-inline Minus">
                                        @* <input type="hidden" name="productID" value="@item.ProductID" />
                                <input type="hidden" name="quantity" value="-1" /> *@
                                        <button type="submit" class="qty-btn">−</button>
                                    </form>
                                    <span class="mx-2 fw-bold itemQuantity">@item.Quantity</span>
                                    <form asp-action="UpdateQuantity" asp-controller="Cart" asp-controller="Cart" asp-route-productID="@item.ProductID" asp-route-quantity="1" class="d-inline">
                                        @* <input type="hidden" name="productID" value="@item.ProductID" />
                                <input type="hidden" name="quantity" value="1" /> *@
                                        @if (item.Quantity == item.MaxQuantity)
                                        {
                                            <button type="submit" class="qty-btn" disabled>+</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="qty-btn">+</button>

                                        }
                                    </form>
                                </div>
                                <div class="col-2 text-end fw-bold price-col">
                                    $@item.TotalPrice
                                </div>
                                <div class="col-1 text-center">
                                    <form asp-action="RemoveItem" asp-controller="Cart" asp-route-productID="@item.ProductID">
                                        @* <input type="hidden" name="productID" value="@item.ProductID" /> *@
                                        <button type="submit" class="remove-btn">&times;</button>
                                    </form>
                                </div>
                            </div>
                        }


                        <form asp-action="ClearCart" asp-controller="Cart" class="mt-3 text-start">
                            <button type="submit" class="clear-cart-link">@SharedLocalizer["Clear cart"]</button>
                        </form>
                    
                }
            </div>
        </div>
        @if (Model.CartItems != null){
        <div class="col-lg-3">
            <div class="summary-container">
                <h5 class="fw-bold">@SharedLocalizer["Order Summary"]</h5>
                <div class="d-flex justify-content-between my-2">
                    <span>@SharedLocalizer["Items Count"]: @Model.TotalItems</span>
                    <span class="fw-bold">$@Model.TotalPrice</span>
                </div>
                <hr />
                <form asp-action="Checkout" asp-controller= "" >
                    <label class="form-label">@SharedLocalizer["Payment Method"]:</label><br />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="Cash" value="Cash" checked>
                        <label class="form-check-label" for="cash">@SharedLocalizer["Cash"]</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="VISA" value="VISA">
                        <label class="form-check-label" for="VISA">@SharedLocalizer["VISA"]</label>
                    </div>
                    <button type="submit" class="btn btn-checkout w-100 mt-3">@SharedLocalizer["Checkout"]</button>
                </form>
            </div>
        </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(function() { 
            $(".Minus").submit(function() {
                var quantity = parseInt($(this).siblings(".itemQuantity").text());
                if (quantity === 1) 
                {
                    return confirm("You decresed the quantity of product to Zero.It will be remoded! Are you sure?");
                }
                return true;
            });
        });
    </script>
}
