}

<!-- ✅ Full-page gradient background -->
<div style="min-height:100vh; background: linear-gradient(135deg, #6a11cb, #2575fc); padding: 40px;">
    <div class="container">

        <!-- ✅ Card wrapper -->
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">

                <!-- ✅ Fancy header -->
                <h2 class="mb-4 text-center fw-bold" style="color: #6a11cb;">
                    <i class="bi bi-box-seam"></i> Add New Product
                </h2>

                <!-- ✅ Success / Error alerts -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    </div>
                }
                else if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                    </div>
                }

                <!-- ✅ Form -->
                <form asp-action="AddProduct" method="post" enctype="multipart/form-data" class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProductNameAR" class="form-label"></label>
                        <input asp-for="ProductNameAR" class="form-control" />
                        <span asp-validation-for="ProductNameAR" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select"
                                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="DescriptionAR" class="form-label"></label>
                        <textarea asp-for="DescriptionAR" class="form-control"></textarea>
                        <span asp-validation-for="DescriptionAR" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="ImageFile" class="form-label"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary px-4 py-2">
                            <i class="bi bi-plus-circle"></i> Add Product
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


