@model ShoppingHub.BLL.ModelVm.ProductDetailsVM

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    var isRtl = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar";
}

<style>
    /* Use variables from the main layout for consistency */
    :root {
        --primary-color: #667eea; /* Light Purple/Blue */
        --secondary-color: #764ba2; /* Darker Purple */
        --price-color: #ef4444; /* Bright Red */
        --text-dark: #333;
        --white: #ffffff;
        --light-bg: #f8f9fa;
        --shadow-elevation: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Main Container Styles */
    .details-card {
        max-width: 1200px;
        margin: 0 auto;
        border-radius: 16px;
        background-color: var(--white);
        box-shadow: var(--shadow-elevation);
        overflow: hidden;
        transition: transform 0.3s ease;
    }
    
    .details-card:hover {
        transform: translateY(-2px);
    }

    /* Product Image Section - UPDATED */
    .product-image-section {
        background-color: transparent; /* Changed to transparent, will inherit .details-card background */
        padding: 2rem;
        border-right: 1px solid #eee;
        display: flex; /* Make it a flex container */
        align-items: center; /* Center content vertically */
        justify-content: center; /* Center content horizontally */
    }
    html[dir='rtl'] .product-image-section {
        border-right: none;
        border-left: 1px solid #eee;
    }

    .product-image-wrapper {
        /* Removed fixed height, will expand based on image and flex parent */
        width: 100%; /* Take full width */
        height: 550px; /* Increased fixed height for image area */
        display: flex; /* Flexbox for centering image */
        align-items: center; /* Center image vertically */
        justify-content: center; /* Center image horizontally */
        overflow: hidden; /* Hide anything overflowing */
        border-radius: 10px; /* Rounded corners for the wrapper */
        background-color: var(--light-bg); /* Light background behind the image */
        box-shadow: 0 5px 15px rgba(0,0,0,0.05); /* Subtle shadow for the image area */
    }
    .product-image-wrapper img {
        max-width: 95%; /* Limit image width to 95% of its wrapper */
        max-height: 95%; /* Limit image height to 95% of its wrapper */
        object-fit: contain; /* Ensure entire image is visible without cropping */
        display: block;
        border-radius: 8px; /* Slightly rounded image itself */
    }

    /* Product Info Section */
    .product-info-section {
        padding: 2.5rem;
        color: var(--text-dark);
    }

    /* Product Name */
    .product-name {
        font-size: 3rem;
        font-weight: 800;
        color: var(--secondary-color);
        line-height: 1.2;
        margin-bottom: 1.5rem;
        border-bottom: 3px solid var(--primary-color);
        padding-bottom: 0.5rem;
    }

    /* Price */
    .product-price {
        font-size: 2.8rem;
        font-weight: 800;
        color: var(--price-color);
        margin-bottom: 1rem;
    }

    /* Rating Stars */
    .rating-stars i {
        font-size: 1.4rem;
        color: gold;
        margin-right: 2px;
    }
    .rating-text {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    /* Description */
    .product-description {
        line-height: 1.8;
        font-size: 1.1rem;
        color: var(--text-dark);
        margin-top: 1.5rem;
    }
    
    /* Quantity and Buy Actions */
    .quantity-buy-group {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    /* Quantity Input */
    .quantity-input {
        width: 120px;
        border: 2px solid var(--primary-color);
        border-radius: 8px;
        text-align: center;
        font-size: 1.2rem;
        font-weight: 600;
        height: 50px;
        padding: 0 0.5rem;
    }
    .quantity-input:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.25rem rgba(118, 75, 162, 0.25);
    }

    /* Add to Cart Button */
    .btn-add-to-cart-lg {
        background-color: var(--primary-color);
        color: var(--white);
        font-size: 1.2rem;
        font-weight: 700;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
    }
    .btn-add-to-cart-lg:hover {
        background-color: var(--secondary-color);
        color: var(--white);
        transform: translateY(-1px);
    }

    /* Back Button */
    .btn-back {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-dark);
        border: 1px solid var(--medium-gray);
        border-radius: 8px;
        transition: background-color 0.3s;
    }
    .btn-back:hover {
        background-color: var(--medium-gray);
    }

    /* Reviews Section */
    .reviews-section {
        margin-top: 3rem;
        padding: 2rem;
        background-color: var(--white);
        border-radius: 12px;
        box-shadow: var(--shadow-elevation);
    }
    .reviews-section h3 {
        color: var(--secondary-color);
        font-weight: 700;
        border-bottom: 2px solid var(--medium-gray);
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }
    .review-item {
        border-bottom: 1px dashed #ddd;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
    }
    .review-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    .review-user-name {
        font-weight: 700;
        color: var(--text-dark);
    }
    .review-rating-stars i {
        color: gold;
        font-size: 1rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .product-image-section {
            border-right: none;
            border-bottom: 1px solid #eee;
        }
        .product-info-section {
            padding: 2rem;
        }
        .product-name {
            font-size: 2.5rem;
        }
        .product-price {
            font-size: 2rem;
        }
        .quantity-buy-group {
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
        }
        .quantity-input {
            width: 100%;
        }
        .btn-add-to-cart-lg {
            width: 100%;
        }
        .product-image-wrapper {
            height: 400px; /* Adjust height for smaller screens */
        }
    }
</style>


<div class="container my-5">
    <div class="row details-card">

        <div class="col-lg-6 product-image-section">
            <div class="product-image-wrapper">
                <img src="@Url.Content(Model.ImagePath)"
                     class="img-fluid"
                     alt="@Model.ProductName" />
            </div>
        </div>

        <div class="col-lg-6 product-info-section d-flex flex-column justify-content-center">
            
            <h1 class="product-name" style="text-align:@(isRtl ? "right" : "left");">
                @(isRtl ? Model.ProductNameAR : Model.ProductName)
            </h1>

            <h2 class="product-price">
                $@Model.Price
            </h2>

            @if (Model.AverageRating.HasValue)
            {
                <div class="d-flex align-items-center mb-3">
                    <div class="rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            // Using Font Awesome stars (Assuming it's included via _NewLayout)
                            if (i <= (int)Model.AverageRating)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (i - Model.AverageRating < 1)
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </div>
                    <span class="ms-3 rating-text">(@Model.AverageRating.Value.ToString("0.0")) based on @Model.Ratings.Count() reviews</span>
                </div>
            }

            <div class="product-description" style="text-align:@(isRtl ? "right" : "left");">
                <p>@(isRtl ? Model.DescriptionAR : Model.Description)</p>
            </div>

            <div class="quantity-buy-group">
                <form asp-action="AddToCart" asp-controller="Cart" method="post" class="d-flex gap-3 align-items-center w-100">
                    <input type="hidden" name="ProductID" value="@Model.ProductID" />
                    
                    <input type="number" id="Quantity" name="Quantity" value="1" min="1" class="form-control quantity-input" />
                    
                    <button type="submit" class="btn btn-add-to-cart-lg flex-grow-1">
                        <i class="fas fa-cart-plus me-2"></i> Add to Cart
                    </button>
                </form>
            </div>
            
            <div class="mt-4">
                <a asp-action="GetAllProducts" class="btn btn-back btn-lg w-100">
                    <i class="fas fa-arrow-left me-2"></i> Back to Products
                </a>
            </div>

        </div>
    </div>

    <div class="reviews-section">
        <h3><i class="fas fa-comments me-2"></i> User Reviews</h3>

        @if (Model.Ratings != null && Model.Ratings.Any())
        {
            foreach (var r in Model.Ratings)
            {
                <div class="review-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong class="review-user-name">@r.UserName</strong>
                        <div class="review-rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                @if (i <= r.Rate)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                else
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                        </div>
                    </div>
                    <p class="mt-2 text-muted">@r.Comment</p>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No reviews yet. Be the first to share your thoughts!</p>
        }
    </div>
</div>