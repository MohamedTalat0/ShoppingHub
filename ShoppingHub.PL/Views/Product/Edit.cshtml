@model ShoppingHub.BLL.ModelVm.EditProductVM

@{
    ViewData["Title"] = "Edit Products‘ properties ";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-white text-center" style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Product</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductID" />

                        <!-- Product Name -->
                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-bold text-secondary"></label>
                            <input asp-for="ProductName" class="form-control border-primary shadow-sm" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <!-- Product Name -->
                        <div class="mb-3">
                            <label asp-for="ProductNameAR" class="form-label fw-bold text-secondary"></label>
                            <input asp-for="ProductNameAR" class="form-control border-primary shadow-sm" />
                            <span asp-validation-for="ProductNameAR" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold text-secondary"></label>
                            <input asp-for="Price" class="form-control border-primary shadow-sm" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Quantity -->
                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold text-secondary"></label>
                            <input asp-for="Quantity" class="form-control border-primary shadow-sm" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold text-secondary"></label>
                            <textarea asp-for="Description" rows="3" class="form-control border-primary shadow-sm"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="DescriptionAR" class="form-label fw-bold text-secondary"></label>
                            <textarea asp-for="DescriptionAR" rows="3" class="form-control border-primary shadow-sm"></textarea>
                            <span asp-validation-for="DescriptionAR" class="text-danger"></span>
                        </div>

                        @* <!-- Existing Image -->
                        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                        {
                            <div class="mb-3 text-center">
                                <label class="form-label fw-bold text-secondary">Current Image</label>
                                <div>
                                    <img src="~/Files/images/products/@Model.ExistingImagePath" alt="Product Image"
                                         class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
                                </div>
                            </div>
                        } *@

                        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                        {
                            <div class="mb-3 text-center">
                                <label class="form-label fw-bold text-secondary">Current Image</label>
                                <div>
                                    <img src="@Url.Content(Model.ExistingImagePath)" alt="Product Image"
                                         class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
                                </div>
                            </div>
                        }

                        <!-- Upload New Image -->
                        <div class="mb-3">
                            <label asp-for="NewImageFile" class="form-label fw-bold text-secondary">Upload New Image</label>
                            <input asp-for="NewImageFile" type="file" class="form-control border-primary shadow-sm" />
                            <span asp-validation-for="NewImageFile" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold text-secondary">Category</label>
                            <select asp-for="CategoryId" class="form-select border-primary shadow-sm"
                                    asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn text-white fw-bold py-2"
                                    style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

