                    }
                */
        .search-bar {
            order: 3;
            width: 100%;
            max-width: none;
        }

        .nav-menu {
            flex-wrap: wrap;
            gap: 1rem;
        }

        .category-grid,
        .product-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .main-container {
            padding: 2rem 1rem;
        }

        }
    </style>
</head>
